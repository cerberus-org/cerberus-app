{
  "name": "cerberus-app",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "ng": "ng",
    "start": "node --optimize_for_size --max_old_space_size=460 --gc_interval=100 dist/server/app.js",
    "build": "ng build && tsc -p server/tsconfig.app.json",
    "dev": "concurrently \"mongod\" \"ng serve -pc proxy.conf.json --open\" \"tsc -w -p server/tsconfig.app.json\" \"nodemon dist/server/app.js\"",
    "test": "rm -rf out-tsc && tsc -p server/tsconfig.spec.json && jasmine-node out-tsc && ng test --single-run",
    "test-client": "ng test",
    "test-server": "rm -rf out-tsc && tsc -p server/tsconfig.spec.json && jasmine-node out-tsc",
    "lint": "ng lint",
    "lintbe": "tslint server/**/**.ts{,x}",
    "e2e": "ng e2e",
    "heroku-postbuild": "ng build -aot -prod && tsc -p server/tsconfig.app.json"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^4.2.2",
    "@angular/cli": "1.1.1",
    "@angular/common": "^4.0.0",
    "@angular/compiler": "^4.0.0",
    "@angular/compiler-cli": "^4.0.0",
    "@angular/core": "^4.0.0",
    "@angular/flex-layout": "2.0.0-beta.7",
    "@angular/forms": "^4.0.0",
    "@angular/http": "^4.0.0",
    "@angular/material": "2.0.0-beta.7",
    "@angular/platform-browser": "^4.0.0",
    "@angular/platform-browser-dynamic": "^4.0.0",
    "@angular/router": "^4.0.0",
    "@types/angular-material": "^1.1.52",
    "@types/node": "~6.0.60",
    "body-parser": "^1.17.2",
    "core-js": "^2.4.1",
    "express": "^4.15.3",
    "hammerjs": "^2.0.8",
    "mongoose": "^4.10.6",
    "rxjs": "^5.4.1",
    "typescript": "^2.3.4",
    "zone.js": "^0.8.4"
  },
  "devDependencies": {
    "@angular/language-service": "^4.0.0",
    "@types/jasmine": "2.5.45",
    "codelyzer": "~3.0.1",
    "concurrently": "^3.5.0",
    "jasmine-core": "~2.6.2",
    "jasmine-node": "^2.0.0",
    "jasmine-spec-reporter": "~4.1.0",
    "karma": "~1.7.0",
    "karma-chrome-launcher": "~2.1.1",
    "karma-cli": "~1.0.1",
    "karma-coverage-istanbul-reporter": "^1.2.1",
    "karma-jasmine": "~1.1.0",
    "karma-jasmine-html-reporter": "^0.2.2",
    "nodemon": "^1.11.0",
    "protractor": "~5.1.2",
    "tslint": "~5.3.2"
  }
}
