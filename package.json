{
  "name": "cerberus-app",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "ng": "ng",
    "start": "node --optimize_for_size --max_old_space_size=460 --gc_interval=100 dist/server/app.js",
    "build": "ng build && tsc -p server/tsconfig.app.json",
    "dev": "concurrently \"mongod\" \"ng serve -pc proxy.conf.json --open\" \"tsc -w -p server/tsconfig.app.json\" \"nodemon dist/server/app.js\"",
    "test": "rm -rf out-tsc && tsc -p server/tsconfig.spec.json && jasmine-node out-tsc && ng test --single-run",
    "test-client": "ng test",
    "test-server": "rm -rf out-tsc && tsc -p server/tsconfig.spec.json && jasmine-node out-tsc",
    "lint": "ng lint",
    "lintbe": "tslint server/**/**.ts{,x}",
    "e2e": "ng e2e",
    "heroku-postbuild": "ng build -aot -prod && tsc -p server/tsconfig.app.json"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^4.4.4",
    "@angular/cdk": "^2.0.0-beta.11",
    "@angular/cli": "^1.4.4",
    "@angular/common": "^4.4.4",
    "@angular/compiler": "^4.4.4",
    "@angular/compiler-cli": "^4.4.4",
    "@angular/core": "^4.4.4",
    "@angular/flex-layout": "^2.0.0-beta.9",
    "@angular/forms": "^4.4.4",
    "@angular/http": "^4.4.4",
    "@angular/material": "^2.0.0-beta.11",
    "@angular/platform-browser": "^4.4.4",
    "@angular/platform-browser-dynamic": "^4.4.4",
    "@angular/router": "^4.4.4",
    "@ngrx/store": "^4.0.3",
    "@types/angular-material": "^1.1.54",
    "@types/node": "^8.0.31",
    "angular2-signaturepad": "^2.6.1",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.2",
    "chart.js": "^2.7.0",
    "core-js": "^2.5.1",
    "dotenv": "^4.0.0",
    "express": "^4.16.0",
    "hammerjs": "^2.0.8",
    "jsonwebtoken": "^8.0.1",
    "moment": "^2.18.1",
    "moment-timezone": "^0.5.13",
    "mongoose": "^4.11.13",
    "ng2-charts": "^1.6.0",
    "rxjs": "^5.4.3",
    "typescript": "^2.5.3",
    "validator": "^9.0.0",
    "zone.js": "^0.8.18"
  },
  "devDependencies": {
    "@angular/language-service": "^4.4.4",
    "@types/jasmine": "^2.6.0",
    "codelyzer": "^3.2.0",
    "concurrently": "^3.5.0",
    "jasmine-core": "^2.8.0",
    "jasmine-node": "^2.0.0",
    "jasmine-spec-reporter": "^4.2.1",
    "karma": "^1.7.1",
    "karma-chrome-launcher": "^2.2.0",
    "karma-cli": "^1.0.1",
    "karma-coverage-istanbul-reporter": "^1.3.0",
    "karma-jasmine": "^1.1.0",
    "karma-jasmine-html-reporter": "^0.2.2",
    "ng2-mock-component": "^0.1.0",
    "nodemon": "^1.12.1",
    "protractor": "^5.1.2",
    "tslint": "^5.7.0"
  }
}
